<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        tools:context=".PostActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <RadioGroup
                android:id="@+id/rgPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    tools:text="Privacy" />

                <RadioButton
                    android:id="@+id/rgbPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:text="Public" />

                <RadioButton
                    android:id="@+id/rgbFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:text="Friends" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAccess"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:fabCustomSize="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/colorSecondaryVariant"
                    android:clickable="true"
                    android:tint="@color/black"
                    app:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_access"
                    app:tint="@color/black"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:layout_gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14dp"
                tools:text="xxxx" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="300dp"
                android:src="@drawable/ic_like" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:enabled="false"
            android:textColorHint="@color/black"
            android:textSize="12dp"
            android:maxLines="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="14dp"
            android:textColor="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvComments"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:clickable="true" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:enabled="true"
                android:textColorHint="@color/black"
                android:hint="Write a comment..."
                android:textSize="12dp"
                android:maxLines="5" />

            <Button
                android:id="@+id/btnComment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:text="> >"
                android:layout_gravity="bottom"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:text="Submit"
            android:textSize="16dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnAnalyse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:text="Analyse"
            android:textSize="16dp"
            android:backgroundTint="@color/colorSecondaryVariant"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:backgroundTint="#9AE91E1E"
            android:clickable="true"
            android:textSize="16dp"
            android:text="Delete"
            android:visibility="invisible" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLink"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:fabCustomSize="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorSecondaryVariant"
        android:clickable="true"
        android:tint="@color/black"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_link"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>