<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".ParticularsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

    </FrameLayout>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Picture: "
            android:textAlignment="textStart"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnChoosePic"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Select"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorSecondaryVariant"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnTakePic"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Take"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorSecondaryVariant"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnRemovePic"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Remove"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#9AE91E1E"
            android:textColor="@color/black" />

    </LinearLayout>

    <EditText
        android:id="@+id/etAbout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Caption / Tags"
        android:minHeight="48dp"
        android:inputType="textMultiLine"
        android:maxLines="5" />

    <Button
        android:id="@+id/btnSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/colorSecondaryVariant"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Suggest" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Privacy: "
            android:textAlignment="textStart"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
        android:id="@+id/etPrivacy"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Group"
        android:minHeight="45dp"
        android:inputType="textMultiLine"
        android:maxLines="1" />

        <Button
            android:id="@+id/btnPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:text="Granular"
            android:textSize="11dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Submit" />

</LinearLayout>